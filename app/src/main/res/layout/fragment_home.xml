<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDE6C7"
    android:padding="16dp">

    <TextView
        android:id="@+id/vinhTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vinh_le"
        android:textColor="#FF0000"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <ImageView
        android:id="@+id/vinhImageView"
        android:layout_width="347dp"
        android:layout_height="249dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/coffee"
        app:layout_constraintBottom_toTopOf="@+id/vinhButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vinhTextView"
        app:layout_constraintVertical_bias="0.964" />

    <Button
        android:id="@+id/vinhButton"
        android:layout_width="126dp"
        android:layout_height="39dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/round_button_background"
        android:text="@string/submit"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vinhImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
